<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.BlankFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/model"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:scaleType="centerCrop"
            android:src="@drawable/main"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/model"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/male_services"
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        android:src="@drawable/the_daily_nation"
                        android:layout_alignParentTop="true"
                        android:background="?attr/selectableItemBackgroundBorderless" />


                    <TextView
                        android:id="@+id/editText2"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/male_services"
                        android:layout_below="@+id/male_services"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Daily Nation"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/my_appointments"
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        android:src="@drawable/the_star"
                        android:clickable="true" />

                    <TextView
                        android:id="@+id/editText"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/my_appointments"
                        android:layout_below="@+id/my_appointments"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="The Star"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/about"
                        android:layout_width="130dp"
                        android:src="@drawable/the_people_daily"
                        android:layout_height="90dp" />

                    <TextView
                        android:id="@+id/gal_text"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/about"
                        android:layout_below="@+id/about"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="The People Daily"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/promotions"
                        android:layout_width="130dp"
                        android:src="@drawable/sports"
                        android:layout_height="90dp" />


                    <TextView
                        android:id="@+id/promotions_text"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/promotions"
                        android:layout_below="@+id/promotions"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Sports"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/add_service"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/hrs"
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/cnn"
                        android:layout_alignParentTop="true" />

                    <TextView
                        android:id="@+id/text_service"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/hrs"
                        android:layout_below="@+id/hrs"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="CNN"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile"
                        android:layout_width="130dp"
                        android:layout_height="90dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/aljzeera"
                        android:layout_alignParentTop="true"
                        android:clickable="true" />

                    <TextView
                        android:id="@+id/prof_text"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/profile"
                        android:layout_below="@+id/profile"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Aljazeera"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</ScrollView>
